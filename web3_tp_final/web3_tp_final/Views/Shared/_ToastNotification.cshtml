@model web3_tp_final.Models.Appointment

<div class="toast toast-width" role="alert" data-delay="100000" aria-live="assertive" aria-atomic="true" id="Notification_Appointment_@Model.AppointmentID">
    <div class="toast-header">
        <i class="fab fa-wpforms mr-2"></i>
        <strong class="mr-auto toast-title">Nouvelle requête de gardiennage</strong>
        <small>À l'instant</small>
        <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Fermer">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="toast-body">
        <a href="/Users/@Model.Sitter.UserID/Appointments/@Model.AppointmentID">Nouvelle requête de gardiennage reçue par @Model.Owner.UserName.</a>
    </div>
</div>