@model web3_tp_final.DTO.AppointmentDTO
<div class="container">
    <h1>
        Appointment
    </h1>
    <div class="row">
        <form asp-action="Create" asp-route-id="@ViewBag.sitter.UserID" class="col-12 appointment-form mt-3">
            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="OwnerId" type="hidden" value="@ViewBag.user.UserID" />
                <input asp-for="SitterId" type="hidden" value="@ViewBag.sitter.UserID" />

                <div class="form-group col-6">
                    <label asp-for="StartDate" class="control-label">Start Date</label>
                    <input asp-for="StartDate" type="datetime-local" class="form-control" />
                </div>

                <div class="form-group col-6">
                    <label asp-for="EndDate" class="control-label">End Date</label>
                    <input asp-for="EndDate" type="datetime-local" class="form-control" />
                </div>

                <div class="form-group col-12">
                    <label asp-for="PetIds" class="control-label">Pets to be sitted</label>
                    <select asp-for="PetIds" class="form-control select2" multiple>
                        @foreach (var pet in ViewBag.user.Pets)
                        {
                            <option value="@pet.PetID">@pet.Name</option>
                        }
                    </select>
                </div>

                <div class="form-group col-12">
                    <input type="submit" value="Send Form" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

<script>
    $("#PetIds").select2();
    $('#website-body').addClass('website-background');
</script>