@model web3_tp_final.DTO.AppointmentDTO
<h1>
    Appointment
</h1>
<form asp-action="Create" asp-route-id="@ViewBag.user.UserID">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="OwnerId" type="hidden" value="@ViewBag.user.UserID" />
    <input asp-for="SitterId" type="hidden" value="@ViewBag.sitter.UserID" />

    <div class="form-group">
        <label asp-for="StartDate" class="control-label"></label>
        <input asp-for="StartDate" type="datetime-local" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="EndDate" class="control-label"></label>
        <input asp-for="EndDate" type="datetime-local" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PetIds" class="control-label"></label>
        <select asp-for="PetIds" class="form-control select2" multiple>
            @foreach (var pet in ViewBag.user.Pets)
            {
                <option value="@pet.PetID">@pet.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <input type="submit" value="Send Form" class="btn btn-primary" />
    </div>
</form>

<script>
    $("#PetIds").select2();
</script>