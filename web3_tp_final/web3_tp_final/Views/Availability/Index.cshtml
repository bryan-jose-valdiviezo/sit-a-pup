@model web3_tp_final.DTO.AvailabilityDTO

<div class="container pt-3">
    <div class="row mt-3">
        <div class="col-12">
            <h3 class="mb-0">Ajouter des dates de disponibilité</h3>
            <div class="col-12 sap-card-header sap-card-header-round">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-12 row">
                        <div class="col-6 text-center">
                            <label>Date début</label>
                        </div>
                        <div class="col-6 text-center">
                            <label>Date fin</label>
                        </div>
                    </div>
                    <div class="col-12 row">
                        <div class="col-6 form-group">
                            <input type="datetime-local" asp-for="StartDate">
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>
                        <div class="col-6 form-group">
                            <input type="datetime-local" asp-for="EndDate">
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group col-12 text-center">
                        <input type="submit" value="Ajouter" class="sap-submit">
                    </div>
                </form>
            </div>
        </div>
        Périodes de disponibilités:<br>
        @{
            if (ViewBag.Availabilities != null)
            {
                List<Availability> availabilities = (List<Availability>)ViewBag.Availabilities;
                foreach (Availability availability in availabilities)
                {
                    <div class="col-12 sap-card">
                                <div class="col-12 sap-card-header sap-card-header-round">
                                    <div class="col-12">
                                        <div class="row">
                                                    <div class="col-6" id="Overall-Rating">
                                                        <span class="fa-pull-left">
                                                            @availability.StartDate.ToString();
                                                            À @availability.EndDate.ToString();
                                                        </span>
                                                        <span class="fa-pull-right">
                                                            <a asp-controller="Availability" asp-action="Delete" asp-route-id="@availability.AvailabilityID" class="btn btn-danger" data-toggle="confirmation">Supprimer</a>
                                                        </span>
                                                    </div>
                                        </div>
                                    </div>
                                </div>
                    </div>
                }
            }
        }
    </div>
<script>
    $('#website-body').addClass('website-background');
</script>
