@model IEnumerable<web3_tp_final.Models.Pet>

@{
    ViewData["Title"] = "Index";
}

<div>
    <div class="d-flex justify-content-center">
        <h1>Mes animaux</h1>
    </div>
    <div class="d-flex justify-content-end">
        <a asp-action="Create">Inscrire!</a>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-sm">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="~/images/dogs_playing.jpg" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">Card title</h5>
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    <a href="#" class="btn btn-primary">Go somewhere</a>
                </div>
            </div>
        </div>
        <div class="col-sm">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="~/images/dogs_playing.jpg" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">Card title</h5>
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    <a href="#" class="btn btn-primary">Go somewhere</a>
                </div>
            </div>
        </div>
        <div class="col-sm">
            One of three columns
        </div>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Specie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsBeingSitted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sitter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SittingStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SittingEnd)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Specie)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthYear)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsBeingSitted)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sitter)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SittingStart)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SittingEnd)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PetID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.PetID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.PetID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
