@model web3_tp_final.Models.Pet

@{
    ViewData["Title"] = "Modifier";
}

<h1>Modifier</h1>

<div class="container">
    <div class="card p-3 bg-neutral-100">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PetID" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Specie" class="control-label"></label>
                <select asp-for="Specie" class="form-control">
                    <option value="0">Chien</option>
                    <option value="1">Chat</option>
                    <option value="2">Oiseau</option>
                    <option value="3">Rongeur</option>
                    <option value="4">Reptile</option>
                    <option value="5">Poisson</option>
                    <option value="6">Autre</option>
                </select>
                <span asp-validation-for="Specie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirthYear" class="control-label"></label>
                <input asp-for="BirthYear" class="form-control" />
                <span asp-validation-for="BirthYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Photo"></label>
                <input type="file" id="photo" name="photo" multiple="multiple" />
            </div>
            <div class="form-group">
                <input type="submit" value="Enregistrer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<a asp-action="Index">Retourner à la liste</a>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>
    $('#website-body').addClass('website-background');
</script>
